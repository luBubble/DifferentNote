<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBule"
        android:elevation="3dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:paddingRight="20dp"
            android:drawableRight="@mipmap/back" />
        <TextView
            android:id="@+id/txt_toolbarindex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/lists"
            android:textColor="@color/worddarkgreen"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/add_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_add"
        android:drawablePadding="10dp"
        android:text="@string/new_list"
        android:textSize="16sp"
        android:textColor="@color/textGreenBlue"
        android:padding="15dp"
        />

    <ListView
        android:id="@+id/listview_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <Button
        android:id="@+id/show_done_list"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/gray_button_shape"
        android:text="显示已完成任务"
        android:textColor="@color/textGray"
        android:textSize="12sp"
        android:layout_gravity="center"/>
    <ListView
        android:id="@+id/listview_done_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>